<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        body{
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color:rgb(45, 164, 124);
            background-color: rgba(0, 0, 0, 0.83);
        }
    </style>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
</head>
<body>
    <center>
    <h1>URL Shortener</h1>

    <% if (locals.id) { %>
        <p>URL Generated: <a href="http://localhost:8001/<%= id %>">http://localhost:8001/<%= id %></a></p>
    <% } %>

    <div style="margin-bottom: 2rem;">
        <form method="POST" action="/url">
            <label style="color: aliceblue;">
                Enter your original URL:
            </label>
            <input type="text" name="url" placeholder="https://example.com" required />
            <button style="background-color: rgb(59, 122, 216);" type="submit">Generate</button>
        </form>
    </div>

    <% if (locals.urls ) { %>
        <table>
            <thead>
                <tr>
                    <th>S.No.</th>
                    <th>ShortID</th>
                    <th>Redirect</th>
                    <th>Clicks</th>
                </tr>
            </thead>
            <tbody style="color: aliceblue;">
                <% urls.forEach((url, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><a href="http://localhost:8001/<%= url.shortId %>"><%= url.shortId %></a></td>
                        <td><%= url.redirectURL %></td>
                        <td><center><%= url.visitHistory.length %></center></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } %>
</center>
</body>
</html>